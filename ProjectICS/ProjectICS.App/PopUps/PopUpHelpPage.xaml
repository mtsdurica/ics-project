           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="ProjectICS.App.PopUps.PopUpHelpPage">
    <Grid RowDefinitions="*"
          BackgroundColor="Black">
        <Frame BorderColor="White">
            <VerticalStackLayout>
                <Label Text="Help"
                   FontSize="25"/>
                <Label Text="This desktop applicaton allows you to create profile and manage your activities and projects."
                       Margin="0,5"/>
